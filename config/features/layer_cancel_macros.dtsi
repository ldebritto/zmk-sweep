def-nav: go_to_def_and_activate_nav {
    compatible = "zmk,behavior-macro";
    label = "def_nav";
    wait-ms = <0>;
    tap-ms = <0>;
    #binding-cells = <0>;
    bindings =
        <&macro_tap &to DEF>,
        <&macro_press &lc NAV>;
};
