num_spc: num_spc { // Adds a K_CANCEL before SPACE to exit NUM layer from &num_word, but keep NUM alive if it's been &tc'd or used a SPC macro like in &reais R$ 
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>; // Must be 0
    wait-ms = <0>;
    tap-ms = <0>;
    bindings = 
        <&macro_tap &kp K_CANCEL>,
        <&macro_tap &kp SPC>;
};

num_shift_macro: num_shift_macro { // Moves to DEF before sending RSHIFT on hold
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>; // Must be 0
    wait-ms = <0>;
    tap-ms = <0>;
    bindings = 
        <&macro_tap &to DEF>,
        <&macro_press &kp RSHFT>,
        <&macro_pause_for_release>,
        <&macro_release>,
        <&kp RSHFT>;
};