def-nav: to_def_then_nav_layer_on_hold {
    compatible = "zmk,behavior-macro";
    wait-ms = <0>;
    tap-ms = <0>;
    #binding-cells = <2>;
    bindings
        = <&macro_tap &to DEF>
        , <&macro_press &mo NAV>
        , <&macro_pause_for_release>
        , <&macro_release &mo NAV>
        ;
};