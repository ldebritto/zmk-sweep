// sd_ macros make it possible to make dead keys that, when shifted, apply shift to the next key making it far more convenient to type capital accented letters with a sticky shift

shifted_punctuation: shifted_punctuation { // Adds a &sk shift after the corresponding dead key
    compatible = "zmk,behavior-macro-one-param";
    label = "shifted_punctuation";
    wait-ms = <0>;
    tap-ms = <0>;
    #binding-cells = <1>;
    bindings =
        <&macro_tap>,
        <&macro_param_1to1>,
        <&kp MACRO_PLACEHOLDER>,
        <&sk LSHFT>;
};

sd_tilde: shift_dead_tilde {
        compatible = "zmk,behavior-mod-morph";
        #binding-cells = <0>;
        bindings = <&kp TILDE>, <&shifted_punctuation TILDE>;

        mods = <(MOD_LSFT)>;
    };

sd_caret: shift_dead_circ {
        compatible = "zmk,behavior-mod-morph";
        #binding-cells = <0>;
        bindings = <&kp CARET>, <&shifted_punctuation CARET>;

        mods = <(MOD_LSFT)>;
