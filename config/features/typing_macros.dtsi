reais: reais {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>; // Must be 0
    wait-ms = <20>;
    tap-ms = <15>;
    bindings = 
        <&macro_tap &kp LS(R)>,
        <&macro_tap &kp LS(N4)>,
        <&macro_tap &kp SPACE>;
};

