sd_grave: shift_dead_grave {
        compatible = "zmk,behavior-mod-morph";
        #binding-cells = <0>;
        bindings = <&kp GRAVE>, <&shifted_punctuation GRAVE>;

        mods = <(MOD_LSFT)>;
    };
